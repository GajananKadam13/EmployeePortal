                        </div>
                    </div>
                    <br />


                    @*----------*@
                    <div>
                        <table class="table " id="tbl_AddEmployeeBalanceLeave">
                            <tr>
                                @*<thead>*@
                                <th style="display:none;" scope="col">BalLeavePKID</th>
                                <th style="display:none;" scope="col">EmployeePKID</th>
                                <th scope="col">Employee Name</th>
                                <th scope="col">Loss Of Pay</th>
