                                @Html.EditorFor(model => model.CasualLeave, new { htmlAttributes = new { @onkeydown = "if(this.value.length==2 && event.keyCode!=8) return false;", @class = "form-control", @id = "CasualLeave", @placeholder = "Casual Leave", @autocomplete = "off" } })
